@{
    ViewBag.Title = "Register";
}

<div class="row">
    <div class="col-sm-12">
        <h1>Registration</h1>
        <form novalidate="novalidate" action="/account/register" method="post" class="needs-validation">
            @Html.AntiForgeryToken()
            <div class="form-row">
                <div class="form-group col-sm-8">
                    <label for="txtName">PACL Registration number</label>
                    <input type="text" class="form-control" id="txtName" placeholder="PACL Registration number"
                           name="UserId" required="required" />
                    <div class="valid-feedback">
                        Looks good
                    </div>
                    <div class="invalid-feedback">
                        Enter PACL Registration number
                    </div>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-sm-8">
                    <label for="txtMobile">Mobile number</label>
                    <input type="text" class="form-control" id="txtMobile" placeholder="Mobile"
                           name="Mobile" required="required" pattern="^[789]\d{9}$" />
                    <div class="valid-feedback">
                        Looks good
                    </div>
                    <div class="invalid-feedback">
                        Invalid mobile number
                    </div>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-sm-8">
                    <label for="txtOTP">OTP</label>
                    <input type="text" class="form-control" id="txtOTP" placeholder="OTP"
                           name="OTP" required="required" />
                    <div class="invalid-feedback">
                        Invalid OTP
                    </div>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-sm-8">
                    <label for="txtCaptcha">Captcha</label>
                    <input type="text" class="form-control" id="txtCaptcha" placeholder="Captcha"
                           name="Captcha" required="required" />
                    <div class="invalid-feedback">
                        Enter Captcha
                    </div>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-sm-8">
                    <label for="txtPassword">Password</label>
                    <input type="password" class="form-control" id="txtPassword" placeholder="Password"
                           name="Password" required="required" minlength="6"
                           oninput="form.ConfirmPassword.pattern = escapeRegExp(this.value)" />
                    <div class="invalid-feedback">
                        Password must contain atleast 6 characters
                    </div>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-sm-8">
                    <label for="txtPassword">Confirm Password</label>
                    <input type="password" class="form-control" id="txtConfirmPassword" placeholder="Confirm Password"
                           name="ConfirmPassword" required="required" />
                    <div class="invalid-feedback">
                        Password and Confirm Password do not match.
                    </div>
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Register</button>
        </form>
    </div>
</div>
<script>
    $(document).on("submit", ".needs-validation", validate);
    $(".needs-validation input").blur(validate);

    function validate(event) {
        if ($(".needs-validation")[0].checkValidity() == false) {
            event.preventDefault();
        }
        $(".needs-validation")[0].classList.add("was-validated");
    }

    function escapeRegExp(str) {
        return str.replace(/[\-\[\]\/\{\}\(\)\*\+\?\.\\\^\$\|]/g, "\\$&"); 
    }
</script>




